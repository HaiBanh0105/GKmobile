<?xml version="1.0" encoding="utf-8"?>
    <!-- Thanh công cụ đáy cố định -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Nội dung chính -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="90dp"> <!-- Chừa chỗ cho toolbar -->

            <!-- Nội dung bên trong -->
        </ScrollView>

        <!-- Toolbar nổi lên -->
        <LinearLayout
            android:id="@+id/bottomToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/transparent"
            android:elevation="8dp"
            android:gravity="center">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Thống kê"
                android:src="@android:drawable/ic_menu_info_details"
                app:backgroundTint="@android:color/holo_orange_dark"
                android:elevation="6dp" />

            <Space android:layout_width="40dp" android:layout_height="wrap_content" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Thêm giao dịch"
                android:src="@android:drawable/ic_input_add"
                app:backgroundTint="@android:color/holo_green_light"
                android:elevation="6dp" />


            <Space android:layout_width="40dp" android:layout_height="wrap_content" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnCurrencyDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Chuyển đổi tiền tệ"
                android:src="@android:drawable/ic_dialog_dialer"
                app:backgroundTint="@android:color/holo_blue_light"
                android:elevation="6dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


